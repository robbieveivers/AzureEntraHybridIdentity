{
    "name": "AzureEntraHybridIdentity Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-azuretools.vscode-azurecli",
                "hashicorp.terraform",
                "redhat.ansible"
            ]
        }
    },
    "postCreateCommand": "ansible --version && terraform --version && az --version"
}
